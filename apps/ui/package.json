{
  "name": "vibesensor-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "sync:contracts": "node ../../tools/config/sync_shared_contracts_to_ui.mjs",
    "pretypecheck": "npm run sync:contracts",
    "prebuild": "npm run sync:contracts",
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "typecheck": "tsc --noEmit",
    "test:smoke": "npx playwright test --config=playwright.smoke.config.ts tests/smoke.spec.ts tests/api_http.spec.ts --project=laptop-light --workers=1",
    "test:visual": "npx playwright test",
    "test:visual:update": "npx playwright test --update-snapshots",
    "screenshot": "node take-screenshot.mjs",
    "snapshot:update": "node update-snapshots.mjs"
  },
  "dependencies": {
    "uplot": "^1.6.31"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  }
}
